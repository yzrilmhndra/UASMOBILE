<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="110dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Bergabung!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mari Jelajahi Gunung Indonesia"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp"
          />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_nama"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/textfield"
            android:hint="Username"
            android:padding="16dp" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textfield"
            android:hint="Alamat Email"
            android:padding="16dp" />

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield"
                android:drawableEnd="@drawable/ic_eye"
                android:inputType="textPassword"
                android:hint="Password"
                android:padding="16dp" />

            <ImageButton
                android:id="@+id/btnTogglePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/edt_pass"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:padding="10dp"

                android:src="@drawable/ic_eye_closed"
                app:tint="@color/grey" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/edt_confirmPass"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield"
                android:drawableEnd="@drawable/ic_eye"
                android:hint="Password"
                android:inputType="textPassword"


                android:padding="16dp" />

            <ImageButton
                android:id="@+id/btnTogglePassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/edt_confirmPass"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_eye_closed"
                app:tint="@color/grey" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Lupa Password ?"
            android:textColor="@color/purple"
            android:gravity="right"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="43dp"
            android:layout_marginHorizontal="20dp"
            android:text="Daftar"
            android:textSize="19sp"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:elevation="0dp"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Sudah memiliki akun? " />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:text="Login" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
